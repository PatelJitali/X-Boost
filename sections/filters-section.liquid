{{ 'filters-section.css' | asset_url | stylesheet_tag }}

<script src="{{ 'filters-section.js' | asset_url }}" defer="defer"></script>

{% liquid
  assign background = section.settings.color_scheme.settings.background
  assign background_gradient = section.settings.color_scheme.settings.background_gradient
  assign text_color = section.settings.color_scheme.settings.text
  assign solid_button_background = section.settings.color_scheme.settings.button
  assign solid_button_label = section.settings.color_scheme.settings.button_label
  assign outline_button = section.settings.color_scheme.settings.secondary_button_label
  assign shadow = section.settings.color_scheme.settings.shadow
%}

{% style %}
   .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

    {% unless section.settings.full_width_section %}
     #custom-filter {
         border-radius: 3rem;
         margin: 3rem auto;
        box-shadow: 0 0 .4rem .1rem #0000002b;
      }
    {% else %}
     #custom-filter {
      	padding-left: 5rem;
      	padding-right: 5rem;
      }
   {% endunless %}

  @media only screen and (max-width: 768px) {
   #custom-filter {
      padding-left: 2rem;
      padding-right: 2rem;
      box-shadow: none;
      border-radius: 0;
      margin: 0 auto;
    }
  }

  #custom-filter .cc-filter-wrapper div div.filter-list-wrapper div:has(input:checked) {
    box-shadow: 0 0 .3rem .1rem {{ shadow }}b3;
  }

   #custom-filter .cc-filter-wrapper div div.filter-list-wrapper div:hover span.xboost-facet-checkbox__text {
     text-shadow: 0 0 1px {{ shadow }};
   }

    #CCFacetFiltersForm::-webkit-scrollbar-thumb {
      background: {{ text_color }}2b;
      border-radius: 10px;
    }

    #CCFacetFiltersForm::-webkit-scrollbar-thumb:hover {
      background: {{ text_color }};
      cursor: grab;
    }
    #CCFacetFiltersForm::-webkit-scrollbar-thumb:active {
      cursor: grabbing;
    }
{% endstyle %}
<div
  id="custom-filter"
  class="{% unless section.settings.full_width_section %} page-width {% endunless %}section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
>
  <div class="custom-filter--wrapper">
    {% if section.settings['filter_section-title'] != blank %}
      <div class="title-wrape">
        <h2
          class="filter__title"
          style="
            font-weight: {{ section.settings.title_font_weight }};
            font-size: {{ section.settings.title_font_size }}px;
            text-align: {{ section.settings.title_alignment }};
            width: 100%;
          "
        >
          {{ section.settings['filter_section-title'] }}
        </h2>
      </div>
    {% endif %}
    {% render 'filters', section: section %}
  </div>
</div>
{% schema %}
{
  "name": "Filters",
  "limit": 1,
  "settings": [
      {
        "type": "checkbox",
        "id": "full_width_section",
        "label": "Full Width",
        "default": false
      },
      {
        "type": "header",
        "content": "Heading"
      },
       {
        "type": "text",
        "id": "filter_section-title",
        "label": "Heading",
       },
       {
        "type": "range",
        "id": "title_font_size",
        "min": 10,
        "max": 80,
        "step": 1,
        "default": 30,
         "unit": "px",
        "label": "Font size"
      },
      {
        "type": "select",
        "id": "title_font_weight",
        "label": "Font weight",
        "options": [
          {
            "label": "normal",
            "value": "400"
          },
          {
            "label": "bold",
            "value": "700"
          }
        ],
        "default": "400"
     },
     {
      "type": "select",
      "id": "title_alignment",
      "label": "Font align",
      "options": [
        {
          "label": "left",
          "value": "left"
        },
        {
          "label": "center",
          "value": "center"
        },
        {
          "label": "right",
          "value": "right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Filters",
      "info": "Note: Disable default filter before using custom filters. Add filters from Search & Discovery App."
    },
    {
      "type": "text",
      "id": "remove_filters",
      "label": "Remove filters",
      "placeholder": "Filter1, Filter2, Filter3,...",
      "info": "Separate filter name by comma(,). [Ex. Filter1, Filter2, Filter3,...]"
    },
    {
      "type": "header",
      "content": "Section Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-5"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "enabled_on": {
    "templates": [
      "collection"
    ]
  },
  "presets": [
    {
      "name": "Filters"
    }
  ]
}
{% endschema %}
