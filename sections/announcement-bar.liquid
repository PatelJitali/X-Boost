    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "t:sections.header.settings.show_line_separator.label"
    },
    {
      "type": "header",
      "content": "t:sections.xboost-announcement-bar.settings.header__1.content",
      "info": "t:sections.xboost-announcement-bar.settings.header__1.info"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": false,
      "label": "t:sections.xboost-announcement-bar.settings.show_social.label"
    },
    {
      "type": "header",
      "content": "t:sections.xboost-announcement-bar.settings.header__2.content"
    },
    {
      "type": "checkbox",
