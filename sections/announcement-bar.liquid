  <div class="page-width xboost-utility-bar__grid{% if announcement_bar and language_country_selector or section.settings.show_social and social_icons %} xboost-utility-bar__grid--3-col{% elsif language_country_selector or section.settings.show_social and social_icons %} xboost-utility-bar__grid--2-col{% endif %}">
    {%- if section.settings.show_social and social_icons -%}
      {%- render 'social-icons' -%}
    {%- endif -%}

    {%- if section.blocks.size == 1 -%}
