{% liquid
  assign text_color = section.settings.color_scheme.settings.text
  assign shadow = section.settings.color_scheme.settings.shadow
%}

{% for block in section.blocks %}
  {% liquid
    assign timer_bg = block.settings.background_color
    if block.settings.text_color != 'rgba(0,0,0,0)'
      assign timer_text = block.settings.text_color
    else
      assign timer_text = text_color
    endif
  %}
{% endfor %}

{% style %}
  #xboost-announcement-countdown-timer .xboost-countdown-item {
    background-color: {{ timer_bg }};
    color: {{ timer_text }};
    box-shadow: 0 0 .3rem .1rem {{ shadow }}2b;
  }

  #xboost-announcement-countdown-timer a.xboost-countdown-button {
    box-shadow: 0 0 .4rem .1rem {{ shadow }}2b;
  }
{% endstyle %}

{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
  if section.settings.enable_country_selector or section.settings.enable_language_selector
    assign language_country_selector = true
  endif
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

{% if social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}

