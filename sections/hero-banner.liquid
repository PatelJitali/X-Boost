{% liquid
  assign background = section.settings.color_scheme.settings.background
  assign text_color = section.settings.color_scheme.settings.text
  assign solid_button_background = section.settings.color_scheme.settings.button
  assign solid_button_label = section.settings.color_scheme.settings.button_label
%}
{{ 'hero-banner.css' | asset_url | stylesheet_tag }}
{% style %}
   .xboost-hero-banner {
     min-height: {{ section.settings.section_height }}px;

     background: {{ background }};
     {% if section.settings.background_gradient != blank %}
       background: {{ section.settings.background_gradient }};
     {% endif %}
   }

  .xboost-hero-banner-content {
     text-align: {{ section.settings.text_alignment }};
     color: {{ section.settings.text_color }};
     max-width: {{ section.settings.content_max_width }}px;
   }

   .xboost-hero-banner-eyebrow {
     font-size: {{ section.settings.eyebrow_size }}px;

      color: {{ text_color }};
   }

   .xboost-hero-banner-heading {
     font-size: {{ section.settings.heading_size }}px;

     color: {{ text_color }};
   }

   .xboost-hero-banner-subheading {
     font-size: {{ section.settings.subheading_size }}px;

     color: {{ text_color }};
   }

   .xboost-hero-banner-buttons {
        justify-content: {{ section.settings.text_alignment }};
      }



   .xboost-hero-banner-btn-primary {
     background: {{ solid_button_background }};
     color: {{ solid_button_label }}; 
   }
    .xboost-hero-banner-btn-secondary{
       background: {{ background }};
     color: {{ solid_button_background }};
    }

   @media screen and (max-width: 768px) {
     .xboost-hero-banner {
       min-height: {{ section.settings.mobile_height }}px;
     }


     .xboost-hero-banner-heading {
       font-size: {{ section.settings.heading_size | times: 0.8 }}px;
     }

     .xboost-hero-banner-subheading {
       font-size: {{ section.settings.subheading_size | times: 0.9 }}px;
     }
   }
{% endstyle %}

<div class="xboost-hero-banner color-{{ section.settings.color_scheme }}" {{ section.shopify_attributes }}>
  {% if section.settings.background_image %}
    <div class="xboost-hero-banner-image">
      <img
        src="{{ section.settings.background_image | image_url: width: 2000 }}"
        alt="{{ section.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ section.settings.background_image.width }}"
        height="{{ section.settings.background_image.height }}"
      >
    </div>
  {% else %}
    <div class="xboost-hero-banner-placeholder">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="xboost-hero-banner-empty-state"></div>
    </div>
  {% endif %}
  <div class="xboost-hero-banner-content">
    {% if section.settings.eyebrow_text != blank %}
      <div class="xboost-hero-banner-eyebrow">
        {{ section.settings.eyebrow_text }}
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h1 class="xboost-hero-banner-heading">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <div class="xboost-hero-banner-subheading">
        {{ section.settings.subheading }}
      </div>
    {% endif %}

    {% if section.settings.primary_btn_label != blank or section.settings.secondary_btn_label != blank %}
      <div class="xboost-hero-banner-buttons">
        {% if section.settings.primary_btn_label != blank %}
          <a
            href="{{ section.settings.primary_btn_link }}"
            class="xboost-hero-banner-btn button xboost-hero-banner-btn-primary"
          >
            {{ section.settings.primary_btn_label }}
          </a>
        {% endif %}

        {% if section.settings.secondary_btn_label != blank %}
          <a
            href="{{ section.settings.secondary_btn_link }}"
            class="xboost-hero-banner-btn button xboost-hero-banner-btn-secondary"
          >
            {{ section.settings.secondary_btn_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "t:sections.hero_banner.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.header.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.hero_banner.settings.color_scheme.label",
      "default": "t:sections.hero_banner.settings.color_scheme.default"
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.layout_header.content"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "t:sections.hero_banner.settings.section_height.label",
      "default": 600
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 250,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "t:sections.hero_banner.settings.mobile_height.label",
      "default": 450
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:sections.hero_banner.settings.text_alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.hero_banner.settings.text_alignment.option_1.label"
        },
        {
          "value": "center",
          "label": "t:sections.hero_banner.settings.text_alignment.option_2.label"
        },
        {
          "value": "right",
          "label": "t:sections.hero_banner.settings.text_alignment.option_3.label"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.background_header.content"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.hero_banner.settings.background_image.label"
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.content_header.content"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "t:sections.hero_banner.settings.eyebrow_text.label",
      "default": "t:sections.hero_banner.settings.eyebrow_text.default"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "t:sections.hero_banner.settings.heading.label",
      "default": "t:sections.hero_banner.settings.heading.default"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "t:sections.hero_banner.settings.subheading.label",
      "default": "t:sections.hero_banner.settings.subheading.default"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "t:sections.hero_banner.settings.content_max_width.label",
      "default": 600
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.typography_header.content"
    },
    {
      "type": "range",
      "id": "eyebrow_size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "t:sections.hero_banner.settings.eyebrow_size.label",
      "default": 14
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "t:sections.hero_banner.settings.heading_size.label",
      "default": 48
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "t:sections.hero_banner.settings.subheading_size.label",
      "default": 18
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.primary_button_header.content"
    },
    {
      "type": "text",
      "id": "primary_btn_label",
      "label": "t:sections.hero_banner.settings.primary_btn_label.label",
      "default": "t:sections.hero_banner.settings.primary_btn_label.default"
    },
    {
      "type": "url",
      "id": "primary_btn_link",
      "label": "t:sections.hero_banner.settings.primary_btn_link.label"
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.settings.secondary_button_content.content"
    },
    {
      "type": "text",
      "id": "secondary_btn_label",
      "label": "t:sections.hero_banner.settings.secondary_btn_label.label",
      "default": "t:sections.hero_banner.settings.secondary_btn_label.default"
    },
    {
      "type": "url",
      "id": "secondary_btn_link",
      "label": "t:sections.hero_banner.settings.secondary_btn_link.label"
    },
  ],
  "presets": [
    {
      "name": "t:sections.hero_banner.presets.name"
    }
  ]
}
{% endschema %}
