{% liquid
  assign background = section.settings.color_scheme.settings.background
  assign background_gradient = section.settings.color_scheme.settings.background_gradient
  assign text_color = section.settings.color_scheme.settings.text
  assign solid_button_background = section.settings.color_scheme.settings.button
  assign solid_button_label = section.settings.color_scheme.settings.button_label
  assign outline_button = section.settings.color_scheme.settings.secondary_button_label
  assign shadow = section.settings.color_scheme.settings.shadow
  assign section_border = settings.all_section_border_radius
%}

{% style %}
   .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

   #performance-count {
     padding-left: 5rem;
     padding-right: 5rem;
    }

    {% comment %}
    {% unless section.settings.full_width_section %}
       #shopify-section-{{ section.id }} {
        background: var(--all-section-default-background);
        padding-block: 3rem;
      }
    {% endcomment %}

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }

    .performance-count .pro_detail{
        flex-direction: {{ section.settings.pro_image_position}};
     }

    .pro-info{
        text-align: {{ section.settings.text_alignment }};
    }

    .pro-info .pro_title, .pro-info p{
        text-align: {{ section.settings.text_alignment }};
    }

   .pro_count_details .pro_count{
        text-align:{{ section.settings.text_alignment_counter }};
    }

    .pro_count p{
        font-size:{{ section.settings.count_content_font_size}}px;
    }



  /* Internal theme CSS - Start */
  #performance-count .pro_detail .pro_image img {
    max-height: 50rem;
    height: 100%;
    width: auto;
  }

   #performance-count .pro_detail .pro_desc a {
    text-decoration: underline;
    color: {{ text_color }};
  }

  #performance-count .pro_detail .pro_image svg {
    fill: currentColor;
  }

    {% if section.settings.pro_image_position == 'row' %}
     #performance-count .pro_detail.first-order .pro_image {
        border-left: 1px solid {{ text_color }};
        line-height: 0;
        position: sticky;
        top: 0;
    }
   {% elsif section.settings.pro_image_position == 'row-reverse' %}
    #performance-count .pro_detail.first-order .pro_image {
        border-right: 1px solid {{ text_color }};
          line-height: 0;
          position: sticky;
          top: 0;
    }
  {% endif %}

    #performance-count .pro_count_details .pro_count{
      background-color: {{ solid_button_background }};
    }
    #performance-count .pro_count, #performance-count .pro_count .count-no, #performance-count .pro_count .count-heading{
        color:{{ background }};
    }

   #performance-count .pro_count .outline-count {
        -webkit-text-fill-color: {{ text_color }};
        -webkit-text-stroke: 1px {{ background }};
    }

   #performance-count .pro_count_details .pro_count svg {
      fill: currentColor;
      width: {{ section.settings.icon_size }}px;
      height: auto;
    }

  #performance-count .pro_count_content .count-heading {
    margin: 15px 0;
  }

  @media screen and (max-width: 1024px) {
    #performance-count .pro_detail .pro_image img {
      width: 100%;
    }

    #performance-count .pro_count_details {
        grid-template-columns: repeat(2, 1fr);
    }

    #performance-count .pro_count .count-no {
      font-size: calc({{ section.settings.count_font_size }}px - 80%) !important;
    }

    #performance-count .pro_count_content .count-heading {
      /* font-size: calc({{section.settings.count_heading_font_size}}px - 40%) !important; */
      font-size: 22px !important;
    }

     #performance-count .pro_count_content p {
        /* font-size:13px; */
        font-size:15px;
    }

    #performance-count .pro_count_details .pro_count svg {
      width: 25px;
    }

    #performance-count .pro_count_content .count-heading {
      margin: 10px 0;
    }
  }
    @media screen and (max-width: 650px) {
      #performance-count .pro_count_details {
          grid-template-columns: repeat(1, 1fr);
      }

       #performance-count .pro_detail .pro-info .pro_title {
            /* font-size: calc({{section.settings.heading_font_size}}px - 50%) !important; */
         font-size : 22px !important;
      }

      #performance-count .section-heading .heading {
            font-size: calc({{ section.settings.title_font_size }}px - 30%) !important;
      }
  }
  /* Internal theme CSS - End */
