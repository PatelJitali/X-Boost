{% assign default_desc = "<p>XBoost gear combines recycled materials, waterproof fabrics, and lasting durabilityâ€”built for peak performance and a sustainable future.</p>" %}
<div
  class="performance-count section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} "
  id="performance-count"
>
  {% if section.settings.heading != blank or section.settings.subcontent != blank %}
    <div class="section-heading">
      {% if section.settings.heading != blank %}
        <h2
          class="heading"
          style="
            font-weight: {{ section.settings.title_font_weight }};
            font-size: {{ section.settings.title_font_size }}px;
            text-align: {{ section.settings.title_alignment }};
            width: 100%;
          "
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      {% if section.settings.subcontent != blank %}
        <div
          class="sub-heading"
          style="
            text-align: {{ section.settings.title_alignment }};
            width: 100%;
          "
        >
          {{ section.settings.subcontent }}
        </div>
      {% endif %}
    </div>
  {% endif %}
  <div class="pro_detail{% if section.settings.show_divider %} first-order{% endif %} page-width">
    <div class="pro-info">
      <h1 class="pro_title" style=" font-size:{{ section.settings.heading_font_size}}px; ">
        {{ section.settings.product.title | default: 'Product title' }}
      </h1>

      <div class="pro_desc">
        {% if section.settings['custom-prod-desc'] != blank %}
          <div class="pro_desc-wrapper">
            <span class="pro_desc-text">
              {{ section.settings['custom-prod-desc'] }}
            </span>
            <a href="javascript:void(0)" class="toggle-desc-link" onclick="toggleDescription(this)"> Show More </a>
          </div>
        {% else %}
          <div class="pro_desc-wrapper">
            <span class="pro_desc-text">
              {{ section.settings.product.description | default: default_desc }}
            </span>
            <a href="javascript:void(0)" class="toggle-desc-link" onclick="toggleDescription(this)"> Show More </a>
          </div>
        {% endif %}
      </div>
      <div class="pro_btn">
        <a
          class="button shop_btn{% if section.settings.secondary_btn %} button--secondary{% endif %}"
          href="{{ section.settings.product.url | default: "#" }}"
        >
          {% if section.settings.btn_text != blank %}
            {{ section.settings.btn_text | default: 'Shop Now' }}
          {% endif -%}
        </a>
      </div>
    </div>
    <div class="pro_image">
      {% if section.settings.product != blank and section.settings.product.featured_image != blank %}
        {{
          section.settings.product.featured_image
          | image_url: height: section.settings.product.featured_image.height
          | image_tag
        }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
  </div>

  <div class="pro_count_details {% unless section.settings.full_width_section %}page-width {% endunless %}">
    {% for block in section.blocks %}
      <div class="pro_count">
        {% render 'performance-count-icon', icon: block.settings.icon %}
        {% if block.settings.count != blank %}
          <h2
            class="count-no {% if section.settings.text_style == 'outline' %}outline-count{% endif %}"
            data-animate="{{ block.settings.countup_animate }}"
            data-duration="{{ block.settings.counter_duration }}"
            style=" font-size:{{ section.settings.count_font_size }}px; font-weight:{{ section.settings.count_font_weight }}"
          >
            {{ block.settings.count }}
          </h2>
        {% endif %}
        <div class="pro_count_content">
          {% if block.settings.count_heading != blank %}
            <h3 class="count-heading" style=" font-size:{{ section.settings.count_heading_font_size}}px; ">
              {{ block.settings.count_heading }}
            </h3>
          {% endif %}
          {% if block.settings.count_content != blank %}
            {{ block.settings.count_content }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script src="{{ 'performance-count-product.js' | asset_url }}" defer="defer"></script>

