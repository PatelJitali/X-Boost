<!-- sections/cc-collections-slider.liquid -->
{{ 'collections-slider.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.min.css' | asset_url | stylesheet_tag }}
{{ 'slick.min.css' | asset_url | stylesheet_tag }}

{% liquid
  assign background = section.settings.color_scheme.settings.background
  assign background_gradient = section.settings.color_scheme.settings.background_gradient
  assign text_color = section.settings.color_scheme.settings.text
  assign solid_button_background = section.settings.color_scheme.settings.button
  assign solid_button_label = section.settings.color_scheme.settings.button_label
  assign outline_button = section.settings.color_scheme.settings.secondary_button_label
  assign shadow = section.settings.color_scheme.settings.shadow
%}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {% unless section.settings.full_width_section %}
     #shopify-section-{{ section.id }} {
      background: var(--all-section-default-background);
      padding-block: 3rem;
    }
   .collection_slider_{{ section.id }} {
       border-radius: 3rem;
       margin: 3rem auto;
       box-shadow: 0 0 .4rem .1rem #0000002b;
    }
   {% else %}
   .collection_slider_{{ section.id }} {
        padding-left: 5rem;
        padding-right: 5rem;
    }
   {% endunless %}

   @media only screen and (max-width: 768px) {
     .collection_slider_{{ section.id }} {
        padding: 2rem 1rem;
        box-shadow: none;
        border-radius: 0;
        margin: 0 auto;
      }

     #collection_slider_container h2.coll_slider__title {
        font-size: calc({{ section.settings.title_font_size }}px - 40%) !important;
     }
   }

  #collection_slider_container .collection-slider-list::-webkit-scrollbar-thumb {
    background: {{ text_color }}2b;
    border-radius: 10px;
  }

  #collection_slider_container .collection-slider-list::-webkit-scrollbar-thumb:hover {
    background: {{ text_color }};
    cursor: grab;
  }
  #collection_slider_container .collection-slider-list::-webkit-scrollbar-thumb:active {
    cursor: grabbing;
  }

   #collection_slider_container>*, #collection_slider_container .coll_slider__title  {
     color: {{ text_color }};
  }

   #collection_slider_container svg.placeholder_svg_tag {
    stroke: {{ text_color }};
  }

  #collection_slider_container .round-images .slick-slider-images {
    border: 1px solid {{ outline_button }}2b;
    box-shadow: inset 0 0 .4rem .1rem {{ shadow }}2b;
  }

  {% if section.settings.flip_animation %}
  #collection_slider_container
    .round-images
    .coll_slider:hover
    .slick-slider-images {
    transform: rotateY(180deg);
    transition: 0.4s linear;
  }
    {% endif %}
{% endstyle %}

{% assign selected_collections = section.settings.collection_slider_list %}

{% if section.settings.collection_slider_list != blank or section.settings.show_all_collections %}
  <div
    class="collection_slider_{{ section.id }} {% unless section.settings.full_width_section %}page-width {% endunless %}section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
    id="collection_slider_container"
  >
    <div>
      {% if section.settings['coll_slider-title'] != blank %}
        <div class="title-wrape">
          <h2
            class="coll_slider__title"
            style="
              font-weight: {{ section.settings.title_font_weight }};
              font-size: {{ section.settings.title_font_size }}px;
              text-align: {{ section.settings.title_alignment }};
              width: 100%;
            "
          >
            {{ section.settings['coll_slider-title'] }}
          </h2>
        </div>
      {% endif %}

      <div class="coll_slider_wrap{% if section.settings.round_images %} round-images{% endif %}">
        {% if section.settings.show_all_collections %}
          <div class="collection-slider-list">
            {% for slider_collections in collections %}
              {% unless slider_collections.handle contains collection.handle %}
                <a class="coll_slider" href="{{ slider_collections.url }}">
                  <div class="slick-slider-images">
                    {% if slider_collections.image != blank %}
                      {{
                        slider_collections.image.src
                        | image_url: width: 500, height: 700, crop: 'center'
                        | image_tag: widths: '150,200,250,300,350,400,500,600,700'
                      }}
                    {% else %}
                      {{ 'collection-1' | placeholder_svg_tag: 'placeholder_svg_tag' }}
                    {% endif %}
                  </div>
                  {% unless section.settings.hide_title %}
                    <span class="coll_slider_title">
                      {{ slider_collections.title -}}
                    </span>
                  {% endunless %}
                </a>
              {% endunless %}
            {% endfor %}
          </div>
        {% else %}
          <div class="collection-slider-list">
            {% for slider_collections in selected_collections %}
              {% unless slider_collections.handle contains collection.handle %}
                <a class="coll_slider" href="{{ slider_collections.url }}">
                  <div class="slick-slider-images">
                    {% if slider_collections.image != blank %}
                      {{
                        slider_collections.image.src
                        | image_url: width: 500, height: 700, crop: 'center'
                        | image_tag: widths: '150,200,250,300,350,400,500,600,700'
                      }}
                    {% else %}
                      {{ 'collection-1' | placeholder_svg_tag: 'placeholder_svg_tag' }}
                    {% endif %}
                  </div>
                  {% unless section.settings.hide_title %}
                    <span class="coll_slider_title">
                      {{ slider_collections.title -}}
                    </span>
                  {% endunless %}
                </a>
              {% endunless %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "t:sections.collections_slider.name",
  "settings": [
      {
        "type": "checkbox",
        "id": "full_width_section",
        "label": "t:sections.collections_slider.settings.full_width_section.label",
        "default": true
      },
      {
        "type": "header",
        "content": "t:sections.collections_slider.settings.header.content"
      },
      {
        "type": "text",
        "id": "coll_slider-title",
        "label": "t:sections.collections_slider.settings.coll_slider-title.label",
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 10,
        "max": 80,
        "step": 1,
        "default": 30,
         "unit": "px",
        "label": "t:sections.collections_slider.settings.title_font_size.label"
      },
      {
        "type": "select",
        "id": "title_font_weight",
        "label": "t:sections.collections_slider.settings.title_font_weight.label",
        "options": [
          {
            "label": "t:sections.collections_slider.settings.title_font_weight.option_1.label",
            "value": "400"
          },
          {
            "label": "t:sections.collections_slider.settings.title_font_weight.option_2.label",
            "value": "700"
          }
        ],
        "default": "400"
      },
       {
        "type": "select",
        "id": "title_alignment",
        "label": "t:sections.collections_slider.settings.title_alignment.label",
        "options": [
          {
            "label": "t:sections.collections_slider.settings.title_alignment.option_1.label",
            "value": "left"
          },
          {
            "label": "t:sections.collections_slider.settings.title_alignment.option_2.label",
            "value": "center"
          },
          {
            "label": "t:sections.collections_slider.settings.title_alignment.option_3.label",
            "value": "right"
          }
        ],
        "default": "left"
      },
    {
      "type": "header",
      "content": "t:sections.collections_slider.settings.settings_header.content"
    },
    {
      "type": "checkbox",
      "id": "show_all_collections",
      "label": "t:sections.collections_slider.settings.show_all_collections.label",
      "default": true
    },
    {
      "type": "collection_list",
      "id": "collection_slider_list",
      "label": "t:sections.collections_slider.settings.collection_list.label",
      "info": "t:sections.collections_slider.settings.collection_list.info"
    },
    {
      "type": "checkbox",
      "id": "round_images",
      "label": "t:sections.collections_slider.settings.round_images.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "flip_animation",
      "label": "t:sections.collections_slider.settings.flip_animation.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "hide_title",
      "label": "t:sections.collections_slider.settings.hide_title.label",
      "default": false
    },
      {
        "type": "header",
        "content": "t:sections.collections_slider.settings.color_header.content"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-6"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
  ],
  "presets": [
    {
      "name": "t:sections.collections_slider.presets.name"
    }
  ]
}
{% endschema %}
