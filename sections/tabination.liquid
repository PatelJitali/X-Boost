<!-- sections/cc-tabination.liquid -->

{{ 'tabination.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/fontawesome.min.css">

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tabs-section .tab-description {
    font-size: {{section.settings.font_size_description}}px;
    font-weight: {{section.settings.font-weight-description}};
  }

  .tabs-section .tab-title {
    font-weight: {{section.settings.font-weight-title}};
    font-size: {{section.settings.font_size_title}}px;
  }

  .tabs-section .tab-subtitle {
    font-size: {{section.settings.font_size_description}}px;
    font-weight: {{section.settings.font-weight-description}};
  }

  {% unless section.settings.full_width_section %}
      #shopify-section-{{ section.id }} {
        background: var(--all-section-default-background);
        padding-block: 3rem;
      }
    #cc-tabination-image-change {
      border-radius: 3rem;
      margin: 3rem auto;
      box-shadow: 0 0 .4rem .1rem #0000002b;
    }
   {% else %}
   #cc-tabination-image-change {
     padding-left: 5rem;
     padding-right: 5rem;
    }
   {% endunless %}

  @media only screen and (max-width: 768px) {
    #cc-tabination-image-change {
      padding: 2rem 1rem;
      box-shadow: none;
      border-radius: 0;
      margin: 0 auto;
    }
  }
{% endstyle %}

<section
  class="
    tabs-section animate {{ section.settings.animation_type }}
    {% unless section.settings.full_width_section %}page-width {% endunless %}section-{{ section.id }}-padding
    color-{{ section.settings.color_scheme }}
  "
  id="cc-tabination-image-change-{{ section.id }}"
  data-section-id="{{ section.id }}"
>
  <div class="tabs-section-contanier {% if section.settings.full_width_section %}page-width {% endif %}">
    <div class="image-container">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="{{ block.settings.title }}"
            class="tab-image {% if forloop.first %}active{% endif %}"
            data-tab="{{ forloop.index }}"
            loading="lazy"
          >
        {% else %}
          {{ 'product-1' | placeholder_svg_tag }}
        {% endif %}
      {% endfor %}
    </div>

    <div class="tabs-container">
      {% for block in section.blocks %}
        <div class="main-tab-contanier {% if forloop.first %}active{% endif %}" data-tab="{{ forloop.index }}">
          <div class="tab-button">
            {% if block.settings.icon %}
              <span class="tab-icon">
                {% render 'tabi-icon', icon: block.settings.icon %}
              </span>
            {% endif %}

            <div class="tab-content">
              {% if block.settings.title != blank %}
                <h3 class="tab-title">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.subtitle != blank %}
                <p class="tab-subtitle">{{ block.settings.subtitle }}</p>
              {% endif %}
            </div>
          </div>
          <span class="icon-accordion-plus"><i class="fa-solid fa-plus"></i></span>
          <span class="icon-accordion-minus"><i class="fa-solid fa-minus"></i></span>
          {% if block.settings['tab-description'] != blank %}
            <div
              class="tab-description"
              {% unless forloop.first %}
                style="display: none;"
              {% endunless %}
            >
              {{ block.settings['tab-description'] }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script src="{{ 'jquery.min.js' | asset_url }}"></script>
<script src="{{ 'tabination.js' | asset_url }}" defer="defer"></script>
