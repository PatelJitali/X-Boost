{% comment %}
  Renders a megamenu for the header with updated grid layout
  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<style>
 {%- for block in section.blocks -%}
    {% if block.settings.menu_image != blank or block.settings.product != blank or block.settings.collection != blank %}
.xboost-mega-menu__list {
  display: flex;
  flex-direction: column;
  gap: 1rem !important;
}
.xboost-mega-menu__container {
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
}

.xboost-mega-menu-right-side{
border-left: 1px solid #eaeaea !important;
}
    
  {% endif %}
