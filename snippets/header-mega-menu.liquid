                   <div class="xboost-collection-price-title-menu">
                <div>
                  <h3 class="xboost-mega-menu__collection-title">{{ block.settings.collection.title }}</h3>
              </div>
              <div>  
                {% if block.settings.cta_text != blank %}
                  <span class="xboost-mega-menu__cta">{{ block.settings.cta_text }}</span>
                {% endif %}
              </div>
                </div>
              </div>
              </a>
            </div>
          {% endif %}
        {% endif %}
      {% endif %}
    {%- endfor -%}
  </div>
{% endif %}

{% endif %}


