</style>
<script src="{{ 'mega-menu.js' | asset_url }}" defer="defer"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/fontawesome.min.css">
<nav class="xboost-header__inline-menu">
  <ul class="xboost-list-menu xboost-list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu >
       
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu" data-menu-behavior="{{ section.settings.menu_behavior }}">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="xboost-header__menu-item xboost-list-menu__item link focus-inset"  aria-expanded="true"
              >
                <span {%- if link.child_active %} class="xboost-header__active-menu-item"{% endif %}>
                  {{- link.title | escape -}}
                </span>
                {{- 'icon-menu.svg' | inline_asset_content -}}
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="xboost-mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient xboost-motion-reduce"
                tabindex="-1"
              >
                <div class="xboost-mega-menu__container">
                  <div class="xboost-mega-menu__links">
                    <ul class="xboost-mega-menu__list" role="list">
                      {%- for childlink in link.links -%}
                        <li class=" xboost-mega-menu-list" data-target="child-{{ forloop.index }}"
                      >
                          <a
                            id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                            href="{{ childlink.url }}"
                            class="xboost-mega-menu__link xboost-mega-menu__link--level-2 link{% if childlink.current %} xboost-mega-menu__link--active{% endif %}"
                            {% if childlink.current %}aria-current="page"{% endif %}
                          >
                            {{ childlink.title | escape }}
                          </a>
                          {%- if childlink.links != blank -%}
                            <ul class="list-unstyled mega-menus-list-unstyled " role="list">
                              {%- for grandchildlink in childlink.links -%}
                                <li>
                                  <a
                                    id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                    href="{{ grandchildlink.url }}"
                                    class="submenu-link xboost-mega-menu__link link{% if grandchildlink.current %} xboost-mega-menu__link--active{% endif %}"
                                    {% if grandchildlink.current %}aria-current="page"{% endif %}
                                  >
                                    {{ grandchildlink.title | escape }}
                                  </a>
                                </li>
                               
                              {%- endfor -%}
                            </ul>
                          {%- endif -%}
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>

